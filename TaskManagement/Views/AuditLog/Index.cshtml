@model IEnumerable<TaskManagement.Models.AuditLog>
@using System.Security.Claims
@{
    ViewData["Title"] = "Kullanıcı Aktivite Geçmişi";
    var currentUserId = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
    var isAdmin = User.IsInRole("Admin");
}
<h2 class="mb-4">Kullanıcı Aktivite Geçmişi</h2>
<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Kullanıcı ID</th>
            <th>İşlem</th>
            <th>Zaman</th>
            <th>Açıklama</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model.Where(l => l.Action == "Login" || l.Action == "Logout"))
    {
        // Admin kendi giriş/çıkışını görmesin
        if (isAdmin && log.UserId.ToString() == currentUserId) { continue; }
        <tr>
            <td>@log.UserId</td>
            <td>@(log.Action == "Login" ? "Giriş" : "Çıkış")</td>
            <td>@log.Timestamp.ToString("g")</td>
            <td>@log.Description</td>
        </tr>
    }
    </tbody>
</table> 