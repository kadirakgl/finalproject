@using System.Security.Claims
@model IEnumerable<TaskManagement.Models.Project>
@{
    ViewData["Title"] = "Projeler";
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("Manager");
}
<h2 class="mb-4">Projeler</h2>
@if (isAdmin)
{
    <a href="/Project/Create" class="btn btn-primary mb-3">Yeni Proje Ekle</a>
}
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Proje Adı</label>
                <input type="text" name="name" value="@ViewBag.FilterName" class="form-control" placeholder="Proje adı ile ara..." />
            </div>
            <div class="col-md-5">
                <label class="form-label">Açıklama</label>
                <input type="text" name="description" value="@ViewBag.FilterDescription" class="form-control" placeholder="Açıklama ile ara..." />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Filtrele</button>
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <a href="/Project" class="btn btn-secondary w-100">Temizle</a>
            </div>
        </form>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Sahip Id</th>
            @if (isAdmin) {
                <th>İşlemler</th>
            }
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.OwnerId</td>
            @if (isAdmin) {
                <td>
                    <a href="/Project/Edit/@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="/Project/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            }
        </tr>
    }
    </tbody>
</table> 