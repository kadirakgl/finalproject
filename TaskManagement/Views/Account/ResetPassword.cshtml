@{
    ViewData["Title"] = "Şifre Sıfırla";
    var token = ViewBag.Token as string ?? "";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h3 class="mb-4 text-center">Yeni Şifre Belirle</h3>
                <form method="post" action="/Account/ResetPassword">
                    <input type="hidden" name="token" value="@token" />
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Yeni Şifre</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" placeholder="Yeni şifrenizi girin">
                    </div>
                    <div class="mb-3">
                        <label for="newPassword2" class="form-label">Yeni Şifre (Tekrar)</label>
                        <input type="password" class="form-control" id="newPassword2" required minlength="6" placeholder="Yeni şifrenizi tekrar girin">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Şifreyi Sıfırla</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    // Şifreler eşleşiyor mu kontrolü
    document.querySelector('form').addEventListener('submit', function(e) {
        var p1 = document.getElementById('newPassword').value;
        var p2 = document.getElementById('newPassword2').value;
        if (p1 !== p2) {
            alert('Şifreler eşleşmiyor!');
            e.preventDefault();
        }
    });
</script> 