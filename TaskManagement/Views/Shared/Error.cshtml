@model ErrorViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ErrorTitle"];
}
<div class="container text-center mt-5">
    <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
    <h1 class="text-danger">@Localizer["ErrorTitle"]</h1>
    <h4 class="text-secondary mb-4">@Localizer["ErrorMessage"]</h4>
    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
    <a href="/" class="btn btn-primary mt-3"><i class="fas fa-home"></i> @Localizer["GoHome"]</a>
</div>
